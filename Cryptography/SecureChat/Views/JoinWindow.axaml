<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SecureChat.Views.JoinWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Join Secure Chat"
        WindowStartupLocation="CenterScreen"
        Width="500"
        Height="300">
    
    <StackPanel VerticalAlignment="Center" Spacing="8">
        <TextBlock FontSize="32" FontWeight="Bold" HorizontalAlignment="Center">SecureChatPKI</TextBlock>
        <Image Width="128" Height="128" Source="avares://SecureChat/Assets/lock.png" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="Username" Watermark="Enter username" Width="300"></TextBox>
            <Button Click="OnClick">Join</Button>
        </StackPanel>
    </StackPanel>

</Window>
